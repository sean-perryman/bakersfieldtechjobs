<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
  <div class="container-fluid center-block">
    <div class="col-md-6 well">
	    <%= f.input :email, required: false, autofocus: true, wrapper_html: { class: 'row' }, label_html: { class: 'col-md-4' }, input_html: { class: 'col-md-6' } %>
	    <%= f.input :password, required: false, wrapper_html: { class: 'row' }, label_html: { class: 'col-md-4' }, input_html: { class: 'col-md-6' } %>
	    <%= f.input :remember_me, wrapper_html: { class: 'row' }, label_html: { class: 'col-md-4' }, as: :boolean if devise_mapping.rememberable? %>
	  	<div class="form-actions new-user">
		    <%= f.button :submit, "Sign in", :class => "btn btn-default new-user-submit" %>
		    <%= render "devise/shared/links" %>
		  </div>
		  
  	</div>
  </div>

  
<% end %>