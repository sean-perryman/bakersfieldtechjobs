<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="container-fluid center-block">
    <div class="col-md-6 well">
	    <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: 'row' }, label_html: { class: 'col-md-4' }, input_html: { class: 'col-md-6' } %>
	    <%= f.input :password, required: true, wrapper_html: { class: 'row' }, label_html: { class: 'col-md-4' }, input_html: { class: 'col-md-6' } %>
	    <%= f.input :password_confirmation, required: true, wrapper_html: { class: 'row' }, label_html: { class: 'col-md-4' }, input_html: { class: 'col-md-6' } %>
	  	
	  	<div class="form-actions">
		    <%= f.button :submit, "Submit", :class => 'btn btn-default center-block' %>
		  </div>
  	</div>
  	<h2 class="text-center">Signing up is simple and secure!</h2>
  	<p class="text-center">Just enter your email address and passwords and you're ready to go!</p>
  </div>
<% end %>

<%= render "devise/shared/links" %>