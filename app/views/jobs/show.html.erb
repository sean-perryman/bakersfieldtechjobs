<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<h2><%= @job.title %></h2>
	</div>
	<div class="row">
		<p>Posted by: <%= @job.contact_name %></p>
	</div>		
	<div class="row">
		<pre><%= @job.description %></pre>
	</div>	
	<div class="row">
		<small><%= @job.date_posted %></small>
	</div>
	<div class="row">
		<a href="mailto:<%= @job.contact_email %>">Email!</a>
	</div>
</div>

<%= link_to 'Back', jobs_path, :class => 'btn btn-default' %>