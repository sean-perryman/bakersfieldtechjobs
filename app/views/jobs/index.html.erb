<div class="container-fluid center-block">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jobs.each do |job| %>
          <tr class='main_row' data-link="<%= job_path(job) %>">
            <td><%= job.title %></td>
            <td><div class="truncate"><%= job.description %></div></td>
            <td>Posted <%= time_ago_in_words(job.created_at) + " ago" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>